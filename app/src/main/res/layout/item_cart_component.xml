<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/itemName_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="20dp"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity:"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toBottomOf="@id/itemQuantity_cart"/>

    <TextView
        android:id="@+id/itemQuantity_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        app:layout_constraintStart_toEndOf="@id/tv1"
        app:layout_constraintTop_toBottomOf="@id/itemName_cart"
        android:paddingLeft="5dp" />

    <Button
        android:id="@+id/removeButton_cart"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Remove"

        app:layout_constraintTop_toTopOf="@id/itemName_cart"
        app:layout_constraintBottom_toBottomOf="@id/itemQuantity_cart"
        android:background="@android:color/holo_red_dark"/>
    


</android.support.constraint.ConstraintLayout>